/**app.wxss**/
scroll-view,view,text,image,button,swiper{
  box-sizing: border-box;
}
.main-contain{
  min-height: 100vh;
  display: flex;
  flex-direction:column;
  padding-top: 1rpx;
}
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.loading{
  width:100%;
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading .load-spin{
  width:6rpx;
  height: 6rpx;
  margin-left:4rpx;
  border-radius:50%;
  background: #000;
}
.common-container{
  position: relative;
}